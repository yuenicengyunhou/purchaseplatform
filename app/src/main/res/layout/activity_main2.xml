<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity2">
<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_329"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@color/bg_blue"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:src="@drawable/ic_mycenter_arc"
        app:layout_constraintTop_toTopOf="@id/view"
        tools:layout_editor_absoluteX="0dp" />
    <ImageView

        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/aaa"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/name"
    android:text="用户名"
    app:layout_constraintTop_toTopOf="@id/image"
    app:layout_constraintLeft_toRightOf="@id/image"
    android:layout_marginLeft="@dimen/dp_10"
    />
    <TextView
        android:id="@+id/reilwary_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国铁路局"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/meassge"
        android:src="@drawable/ic_index"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_marginRight="@dimen/dp_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:layout_width="0dp"
            android:textColor="@color/white"

            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="999"
            android:gravity="center"
            android:textSize="@dimen/font_size_20"
            android:layout_marginTop="@dimen/dp_20"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="999"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/white"

            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_20"
            />
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="999"
            android:textColor="@color/white"

            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:id="@+id/shouc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="商品收藏"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15"
            android:layout_marginTop="@dimen/dp_20"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="店铺收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_20"
            />
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="浏览记录"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_15"
        android:background="@color/bg_blue"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shouc"
        android:layout_marginLeft="@dimen/dp_40"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
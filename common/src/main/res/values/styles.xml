<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="line_thin_shade">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_2</item>
        <item name="android:background">@drawable/main_line</item>
    </style>


    <style name="line_thin_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/line_gray</item>
    </style>


    <style name="line_bold_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_5</item>
        <item name="android:background">@color/line_gray</item>
    </style>


    <style name="line_bold_gray_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/line_gray</item>
    </style>


    <style name="line_thin_gray_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_tiny</item>
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>


    <!-- 提交按钮样式-->
    <style name="btn_commit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>

    </style>


    <!--    蓝色提交按钮-->
    <style name="btn_commit.blue" parent="btn_commit">
        <item name="android:background">@drawable/bg_corner_blue_20</item>
    </style>

    <!--    灰色提交按钮-->
    <style name="btn_commit.gray" parent="btn_commit">
        <item name="android:background">@drawable/bg_corner_gray_20</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>


    <style name="OrdersTabLayoutTextStyle">
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>


    <style name="ImageZoomTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
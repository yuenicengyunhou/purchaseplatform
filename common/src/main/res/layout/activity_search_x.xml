<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hotSearch"
            type="com.rails.lib_data.bean.HotSearchBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <!-- 标题栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">


            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:background="@color/white"
                android:scaleType="center"
                android:src="@mipmap/icon_back" />


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="@dimen/dp_32"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_50"
                android:background="@drawable/bg_corner_gray_20">

                <TextView
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="@string/items_on_sale"
                    android:textSize="@dimen/font_size_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/tv_type_name"
                    android:background="@mipmap/icon_down" />

                <ImageView
                    android:id="@+id/baseline"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_55"
                    android:background="#22000000" />

                <AutoCompleteTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_toEndOf="@+id/baseline"
                    android:background="@null"
                    android:hint="@string/keys_searching"
                    android:textSize="@dimen/font_size_12" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center"
                android:text="@string/search"
                android:textSize="@dimen/font_size_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/search_history"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <com.rails.purchaseplatform.common.widget.LineBreakLayout
            android:id="@+id/lbl_search_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:leftAndRightSpace="20dp"
            app:rowSpace="10dp" />

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/hot_search"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <GridView
            android:id="@+id/gv_hot_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:numColumns="2" />

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="address"
            type="com.rails.lib_data.bean.AddressBean" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_border"
            android:layout_marginTop="@dimen/dp_20"
            android:text="神机营"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@+id/tv_name"
            android:text="15112345678"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toLeftOf="@+id/img_edit"
            android:maxLines="2"
            android:text="北京市海淀区大钟寺怡和院北京市海淀区大钟寺怡和院北京市海淀区大钟寺怡和院"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/font_size_13" />


        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/common_border"
            android:src="@drawable/ic_address_edit" />


        <View style="@style/line_thin_gray"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/tv_address"/>


    </RelativeLayout>

</layout>

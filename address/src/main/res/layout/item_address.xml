<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="address"
            type="com.rails.lib_data.bean.AddressBean" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_border"
            android:layout_marginTop="@dimen/common_border">

            <ImageView
                android:id="@+id/tv_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/svg_circle_checked"
                android:visibility="@{address.isSel?View.VISIBLE:View.GONE}"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@{address.name}"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll_name"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_toEndOf="@+id/ll_name"
            android:text="@{address.phone}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_alignStart="@+id/ll_name"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toStartOf="@+id/img_edit"
            android:maxLines="2"
            android:textColor="@color/font_gray"
            android:text="@{address.address}"
            android:textSize="@dimen/font_size_13" />


        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/common_border"
            android:src="@drawable/ic_address_edit"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_below="@+id/tv_address"
            android:layout_marginRight="@dimen/common_border"
            android:layout_marginLeft="@dimen/common_border">

            <TextView
                android:id="@+id/btn_recivice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_corner_gray_20"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/address_add_recevice"
                android:textColor="@color/selector_white_gray_color"
                android:textSize="@dimen/font_size_12" />


            <TextView
                android:id="@+id/btn_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_gray_20"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:text="@string/address_add_bill"
                android:textColor="@color/selector_white_gray_color"
                android:textSize="@dimen/font_size_12" />

        </LinearLayout>


        <View
            style="@style/line_thin_gray"
            android:layout_below="@+id/ll_type"
            android:layout_marginStart="@dimen/common_border" />


    </RelativeLayout>

</layout>

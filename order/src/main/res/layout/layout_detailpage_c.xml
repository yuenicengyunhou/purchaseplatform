<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinethree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <View
        android:id="@+id/view5"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#D5D5D5"
        app:layout_constraintBottom_toTopOf="@+id/guidelinethree"
        app:layout_constraintEnd_toEndOf="@+id/imageViewsix"
        app:layout_constraintStart_toStartOf="@+id/imageViewsix"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view6"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#D5D5D5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewsix"
        app:layout_constraintStart_toStartOf="@+id/imageViewsix"
        app:layout_constraintTop_toTopOf="@+id/guidelinethree" />

    <ImageView
        android:id="@+id/imageViewsix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelinethree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelinethree"
        app:srcCompat="@drawable/ic_mine_check"/>

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="一级审批"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewsix"
        app:layout_constraintTop_toTopOf="@+id/imageViewsix" />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="审核人: admin1"
        app:layout_constraintStart_toStartOf="@+id/tv_two"
        app:layout_constraintTop_toBottomOf="@+id/tv_two" />

    <TextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="审核时间: 2021-01-02   10:12:11"
        app:layout_constraintStart_toStartOf="@+id/tv_three"
        app:layout_constraintTop_toBottomOf="@+id/tv_three"/>


</androidx.constraintlayout.widget.ConstraintLayout>
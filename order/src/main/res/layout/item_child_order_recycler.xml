<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="childOrder"
            type="com.rails.lib_data.bean.OrderItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_orderNumKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:ems="4"
            android:text="订单号:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_orderNumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{childOrder.orderNumber}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_orderNumKey"
            app:layout_constraintStart_toEndOf="@+id/tv_orderNumKey"
            app:layout_constraintTop_toTopOf="@+id/tv_orderNumKey" />

        <TextView
            android:id="@+id/tv_orderState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@{childOrder.orderState}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_orderNumKey"
            app:layout_constraintEnd_toStartOf="@+id/iv_go_next"
            app:layout_constraintTop_toTopOf="@+id/tv_orderNumKey" />

        <ImageView
            android:id="@+id/iv_go_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@null"
            android:src="@drawable/ic_go_next"
            app:layout_constraintBottom_toBottomOf="@+id/tv_orderNumKey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_orderNumKey" />

        <TextView
            android:id="@+id/tv_generateTimeKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:ems="4"
            android:text="生成时间:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_orderNumKey" />

        <TextView
            android:id="@+id/tv_generateTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{childOrder.generateTime}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_generateTimeKey"
            app:layout_constraintStart_toEndOf="@+id/tv_generateTimeKey"
            app:layout_constraintTop_toTopOf="@+id/tv_generateTimeKey" />

        <ImageView
            android:id="@+id/imageView2"
            imgUrl="@{childOrder.pictureUrl}"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_generateTimeKey" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:ellipsize="end"
            android:ems="10"
            android:maxLines="1"
            android:text="@{childOrder.itemName}"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ "
            app:layout_constraintEnd_toStartOf="@+id/tv_price"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@{childOrder.itemPrice}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_typeKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:text="型号："
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_typeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{childOrder.itemType}"
            app:layout_constraintStart_toEndOf="@+id/tv_typeKey"
            app:layout_constraintTop_toTopOf="@+id/tv_typeKey" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@{childOrder.itemCount}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_typeKey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_typeKey" />

        <TextView
            android:id="@+id/tv_itemNumKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="单品编码："
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_itemNumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{childOrder.itemNum}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_itemNumKey"
            app:layout_constraintStart_toEndOf="@+id/tv_itemNumKey"
            app:layout_constraintTop_toTopOf="@+id/tv_itemNumKey" />

        <TextView
            android:id="@+id/tv_priceKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计：¥ "
            app:layout_constraintBottom_toBottomOf="@+id/tv_itemNumKey"
            app:layout_constraintEnd_toStartOf="@+id/tv_priceValue"
            app:layout_constraintTop_toTopOf="@+id/tv_itemNumKey" />

        <TextView
            android:id="@+id/tv_priceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/tv_itemNumValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_itemNumValue" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
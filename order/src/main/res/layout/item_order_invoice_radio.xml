<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="content"
            type="com.rails.lib_data.bean.InvoiceContentBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@{content.module}"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_13" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_right"
                android:layout_marginRight="@dimen/dp_20"
                android:text="@{content.name}"
                android:layout_centerVertical="true"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_15" />


            <CheckBox
                android:id="@+id/img_right"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_alignTop="@+id/img_product"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="@{content.isSel}"
                android:drawableRight="@drawable/selector_circle" />


        </RelativeLayout>


        <View
            android:id="@+id/line"
            style="@style/line_thin_gray" />


    </LinearLayout>
</layout>
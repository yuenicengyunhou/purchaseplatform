<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/shap_white_card"
    android:orientation="vertical">

    <include
        android:id="@+id/apartment"
        layout="@layout/item_order_detail_header" />

    <TextView
        android:id="@+id/tv_detail_settle_apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/paddingL"
        android:textColor="@color/textCardGrayDark"
        android:textSize="@dimen/font_size_13" />

    <View style="@style/dividerStyle" />

    <include
        android:id="@+id/invoice"
        layout="@layout/item_order_detail_header" />

    <TextView
        android:id="@+id/tv_detail_invoice_apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/paddingL"
        android:textColor="@color/textCardGrayDark"
        android:textSize="@dimen/font_size_13" />


</LinearLayout>
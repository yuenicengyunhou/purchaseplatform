<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:background="@drawable/shap_white_card"
    android:layout_height="wrap_content">

    <include layout="@layout/item_order_detail_header"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textCardGrayDark"
        android:layout_marginStart="@dimen/margin"
        android:text="@string/app_name"
        android:id="@+id/tv_detail_settle_apartment"
        android:textSize="@dimen/font_size_13"
        android:layout_marginBottom="@dimen/paddingL"
        android:layout_marginEnd="@dimen/margin"
        />

    <View style="@style/dividerStyle" />

    <include layout="@layout/item_order_detail_header" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textCardGrayDark"
        android:layout_marginStart="@dimen/margin"
        android:text="@string/app_name"
        android:id="@+id/tv_detail_invoice_apartment"
        android:textSize="@dimen/font_size_13"
        android:layout_marginBottom="@dimen/paddingL"
        android:layout_marginEnd="@dimen/margin"
        />


</LinearLayout>
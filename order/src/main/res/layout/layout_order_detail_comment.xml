<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shap_white_card"
    android:paddingTop="@dimen/paddingL"
    android:paddingBottom="@dimen/paddingL"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_order_comm_"
        android:textColor="@color/textDark"
        android:textSize="@dimen/textSizeL"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_detail_comm"
        android:layout_marginStart="@dimen/margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_13"
        android:id="@+id/tv_comment"
        app:layout_constraintStart_toEndOf="@id/tv_detail_comm"
        android:textColor="@color/textCardGrayDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
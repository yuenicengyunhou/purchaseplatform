<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="content"
            type="com.rails.lib_data.bean.InvoiceTitleBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@{content.module}"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_13" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_toStartOf="@+id/img_right"
                android:text="@{@string/order_invoice_company(content.company)}"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_15" />

<!--20dp-->
            <CheckBox
                android:id="@+id/img_right"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_alignTop="@+id/img_product"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="@{content.isSel}"
                android:drawableEnd="@drawable/selector_circle" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@{@string/order_invoice_code(content.invoiceCode)}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_15" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@{@string/order_invoice_address(content.address)}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_15" />


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@{@string/order_invoice_phone(content.phone)}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@{@string/order_invoice_bank(content.bank)}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_15" />


        <TextView
            android:id="@+id/tv_bank_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@{@string/order_invoice_bankcode(content.bankCode)}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_15" />


        <View
            android:id="@+id/line"
            style="@style/line_thin_gray" />


    </LinearLayout>
</layout>
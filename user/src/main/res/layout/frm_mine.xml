<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/bg_blue">

        <com.rails.purchaseplatform.common.widget.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_55"
            app:border_color="@color/white"
            android:src="@color/bg_gray"
            app:border_width="@dimen/dp_2" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_toRightOf="@+id/img_avatar"
            android:textSize="@dimen/font_size_17"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/white"
            android:text="赵匡义"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/white"
            android:text="公共事业部"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/img_avatar"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_below="@+id/img_avatar"
            android:textColor="@color/white"
            android:text="我的收藏  30"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_watch"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_collect"
            android:layout_alignBaseline="@+id/tv_collect"
            android:layout_marginLeft="@dimen/dp_30"
            android:textColor="@color/white"
            android:text="浏览记录  888"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <com.rails.purchaseplatform.common.widget.LineLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_info"
        android:layout_marginTop="-200dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:fill_color="@color/white"
        app:start_angle="0"
        app:sweep_angle="180">


        <com.rails.purchaseplatform.common.widget.LrLableLayout
            style="@style/mine_tab"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_2"
            app:is_hide="true"
            app:key="@string/mine_mine_fwgj"
            app:key_color="@color/font_black"
            app:key_size="@dimen/font_size_18" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <com.rails.purchaseplatform.common.widget.LrLableLayout
                    style="@style/mine_tab"
                    app:is_hide="false"
                    app:key="@string/main_mine_zzxx"
                    android:layout_marginTop="@dimen/dp_15"
                    app:key_color="@color/font_black"
                    app:key_size="@dimen/font_size_15"
                    app:right_img="@drawable/svg_arrow_white" />


                <com.rails.purchaseplatform.common.widget.LrLableLayout
                    style="@style/mine_tab"
                    app:is_hide="false"
                    app:key="@string/main_mine_xgmm"
                    app:key_color="@color/font_black"
                    app:key_size="@dimen/font_size_15"
                    app:right_img="@drawable/svg_arrow_white" />


                <com.rails.purchaseplatform.common.widget.LrLableLayout
                    style="@style/mine_tab"
                    app:is_hide="false"
                    app:key="@string/main_mine_kfzx"
                    app:key_color="@color/font_black"
                    app:key_size="@dimen/font_size_15"
                    app:right_img="@drawable/svg_arrow_white" />


                <com.rails.purchaseplatform.common.widget.LrLableLayout
                    style="@style/mine_tab"
                    app:is_hide="false"
                    app:key="@string/main_mine_yjfk"
                    app:key_color="@color/font_black"
                    app:key_size="@dimen/font_size_15"
                    app:right_img="@drawable/svg_arrow_white" />


                <com.rails.purchaseplatform.common.widget.LrLableLayout
                    style="@style/mine_tab"
                    app:is_hide="true"
                    app:key="@string/main_mine_sz"
                    app:key_color="@color/font_black"
                    app:key_size="@dimen/font_size_15"
                    app:right_img="@drawable/svg_arrow_white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </com.rails.purchaseplatform.common.widget.LineLayout>


</RelativeLayout>
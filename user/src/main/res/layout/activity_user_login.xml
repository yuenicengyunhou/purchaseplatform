<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@null"
            android:src="@mipmap/ic_logo_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_14"
            android:text="欢迎登录国铁采购商城"
            android:textColor="#333333"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_40"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <EditText
            android:id="@+id/et_phoneInput"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@null"
            android:ems="12"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

        <View
            android:id="@+id/view_phoneInputLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_tiny"
            android:layout_marginStart="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_33"
            android:background="@drawable/bg_corner_gray_5"
            app:layout_constraintTop_toBottomOf="@+id/et_phoneInput"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_95"
            android:text="密码"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

        <EditText
            android:id="@+id/et_passwordInput"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@null"
            android:ems="12"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_password" />

        <View
            android:id="@+id/view_passwordInputLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_tiny"
            android:layout_marginStart="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_33"
            android:background="@drawable/bg_corner_gray_5"
            app:layout_constraintTop_toBottomOf="@+id/et_passwordInput"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_verifyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="85dp"
            android:text="验证码"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_password" />

        <EditText
            android:id="@+id/et_verifyNumInput"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@null"
            android:ems="12"
            android:hint="请输入验证码"
            android:inputType="text"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_verifyNum" />

        <TextView
            android:id="@+id/tv_getVerifyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_35"
            android:text="获取验证码"
            android:textColor="#387CFC"
            android:textSize="@dimen/font_size_15"
            app:layout_constraintBottom_toBottomOf="@+id/et_verifyNumInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_verifyNumInput" />

        <TextView
            android:id="@+id/tv_countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60s"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_getVerifyNum"
            app:layout_constraintEnd_toEndOf="@+id/tv_getVerifyNum"
            app:layout_constraintStart_toStartOf="@+id/tv_getVerifyNum"
            app:layout_constraintTop_toTopOf="@+id/tv_getVerifyNum" />

        <View
            android:id="@+id/view_verifyNumInputLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_tiny"
            android:layout_marginStart="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_33"
            android:background="@drawable/bg_corner_gray_5"
            app:layout_constraintTop_toBottomOf="@+id/et_verifyNumInput"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="26dp"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginEnd="26dp"
            android:background="@drawable/bg_corner_blue_25"
            android:gravity="center"
            android:text="登 录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/font_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_verifyNum" />

        <TextView
            android:id="@+id/tv_forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="忘记密码？"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
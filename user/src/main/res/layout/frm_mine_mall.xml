<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_329"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/bg_blue"
            />
        <com.rails.purchaseplatform.common.widget.CircleImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:border_color="@color/white"
            android:src="@color/bg_gray"
            app:border_width="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="张三三"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/reilwary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协同办公事业部"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/meassge"
            android:src="@drawable/ic_index"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintLeft_toRightOf="@id/name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:id="@+id/collect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15"
                android:layout_marginTop="@dimen/dp_20"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20"
                />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="浏览记录"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="937"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                />
        </LinearLayout>
    <View
        android:id="@+id/center_cutViewone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/light_back"
        app:layout_constraintTop_toBottomOf="@+id/view" />


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_25">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/common_border"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/svg_back_black"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:paddingLeft="@dimen/common_border"
            android:text="@string/market_cart"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_20"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/tv_manager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:button="@null"
            android:paddingRight="@dimen/common_border"
            android:text="@string/market_cart_manager"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_14" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/titleBar">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.rails.purchaseplatform.common.widget.AlphaScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg"
                android:orientation="vertical"
                android:overScrollMode="never">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.rails.purchaseplatform.common.widget.BaseRecyclerView
                            android:id="@+id/cartRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            app:canH="false"
                            app:canV="false" />

                        <com.rails.purchaseplatform.common.widget.EmptyView
                            android:id="@+id/empty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="500dp"
                            android:visibility="gone" />

                    </FrameLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg"
                        android:gravity="center"
                        android:padding="@dimen/dp_15"
                        android:text="@string/market_cart_hot"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_size_15"
                        android:textStyle="bold" />


                    <com.rails.purchaseplatform.common.widget.LoadMoreRecyclerView
                        android:id="@+id/recRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:overScrollMode="never" />

                </LinearLayout>

            </com.rails.purchaseplatform.common.widget.AlphaScrollView>


        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


        <ImageView
            android:id="@+id/img_top"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/common_border"
            android:layout_marginBottom="@dimen/common_border"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_go_top"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true">

        <View style="@style/line_thin_shade" />


        <CheckBox
            android:id="@+id/img_total"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:text="@string/market_cart_selall"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_14"
            android:drawablePadding="@dimen/dp_5"
            android:button="@null"
            android:drawableLeft="@drawable/selector_circle" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_operate"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/market_cart_collect"
                    android:background="@drawable/bg_corner_border_blue_20"
                    android:textColor="@color/font_blue"
                    android:textSize="@dimen/font_size_15" />


                <TextView
                    android:id="@+id/btn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corner_border_red_20"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/market_cart_del"
                    android:textColor="@color/font_red"
                    android:textSize="@dimen/font_size_15" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toLeftOf="@+id/btn_commit"
                    android:text="@string/market_cart_total"
                    android:textColor="@color/font_black_light"
                    android:textSize="@dimen/font_size_16" />


                <TextView
                    android:id="@+id/btn_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corner_blue_20"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/market_cart_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16" />

            </LinearLayout>



        </FrameLayout>


    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="recommend"
            type="com.rails.lib_data.bean.RecommendItemsBean" />

    </data>

    <LinearLayout
        android:id="@+id/ll_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"
        android:orientation="vertical">

        <com.rails.purchaseplatform.common.widget.RatioImage
            android:id="@+id/ri_item_image"
            imgUrl="@{recommend.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{recommend.name}"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥"
                android:textColor="#FFFF0000"
                android:textSize="@dimen/font_size_10" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recommend.price}"
                android:textColor="#FFFF0000"
                android:textSize="@dimen/font_size_10" />
        </LinearLayout>

    </LinearLayout>
</layout>
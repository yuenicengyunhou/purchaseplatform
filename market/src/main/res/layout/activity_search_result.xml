<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_16"
                android:background="@null"
                android:scaleType="center"
                android:src="@mipmap/icon_back" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_toStartOf="@+id/tv_search"
                android:layout_toEndOf="@+id/ib_back"
                android:background="@drawable/bg_corner_gray_20">

                <TextView
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="@string/items_on_sale"
                    android:textColor="#444444"
                    android:textSize="@dimen/font_size_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/tv_type_name"
                    android:background="@mipmap/icon_down" />

                <ImageView
                    android:id="@+id/baseline"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_55"
                    android:background="#22000000" />

                <LinearLayout
                    android:id="@+id/ll_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_toRightOf="@+id/baseline"
                    android:background="@drawable/bg_corner_gray_12_8e8e8e"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8">

                    <TextView
                        android:id="@+id/tv_search_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电脑"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/font_size_12" />

                    <ImageView
                        android:id="@+id/iv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:src="@mipmap/ic_cancel" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/search"
                android:textSize="@dimen/font_size_13" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:id="@+id/tv_synthesis"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/synthesis"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_12" />

            <RelativeLayout
                android:id="@+id/rl_sales"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sort_oder_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sales"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toEndOf="@+id/tv_sort_oder_sales"
                    android:src="@mipmap/icon_up" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@+id/tv_sort_oder_sales"
                    android:src="@mipmap/icon_down" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sort_oder_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toEndOf="@+id/tv_sort_oder_price"
                    android:src="@mipmap/icon_up" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@+id/tv_sort_oder_price"
                    android:src="@mipmap/icon_down" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/ib_filter"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/dp_10"
                android:scaleType="center"
                android:src="@mipmap/icon_filter" />

        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_ji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <com.rails.purchaseplatform.common.widget.BaseRecyclerView
                android:id="@+id/searchResultRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:overScrollMode="never" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="resultByShopProduct"
            type="com.rails.lib_data.bean.OrderItemBean" />
    </data>

    <LinearLayout
        android:id="@+id/rc_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <com.rails.purchaseplatform.common.widget.RatioImage
            android:id="@+id/ri_picture"
            imgUrl="@{resultByShopProduct.pictureUrl}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{resultByShopProduct.itemName}"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:id="@+id/tv_item_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@{resultByShopProduct.itemType}"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_size_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:lines="1"
                android:text="@{resultByShopProduct.itemPrice}"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_size_13" />

        </LinearLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="result"
            type="com.rails.lib_data.bean.SearchResultBean" />
    </data>

    <LinearLayout
        android:id="@+id/ll_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/bg_corner_white_5"
        android:orientation="vertical">

        <com.rails.purchaseplatform.common.widget.RatioImage
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:scaleType="center"
            app:imgUrl="@{result.iconUrl}" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/dp_4"
            android:text="@{result.name}"
            android:textColor="#FF0F0F0F"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:padding="@dimen/dp_4"
            android:text="@{result.shop}"
            android:textColor="#FF3C3C3C"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¥ "
                android:textColor="#FFFF003F"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{result.price}"
                android:textColor="#FFFF003F"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

    </LinearLayout>
</layout>
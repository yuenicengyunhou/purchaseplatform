<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>



    <style name="MyDialog" parent="Theme.rails">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/close_out_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_in_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_activity</item>
    </style>


</resources>
